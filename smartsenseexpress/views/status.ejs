<!-- Content -->
<div class="alert alert-success" role="alert">All systems are currently stable.</div>

<h2>Internal <small><span class="badge badge-success">Stable</span></small></h2>
<h3>Leeds <small><span class="badge badge-success">Stable</span></small></h3>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Machine 1 <span class="badge badge-success">Stable</span>
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                Temperature: <i id="1temp_ok" class="fas fa-thermometer-half green"></i> <i id="1temp_hot" class="fas fa-thermometer-full red"></i>
                Vibration: <i id="1vibr_ok" class="fas fa-signature green"></i> <i id="1vibr_high" class="fas fa-signature red"></i>
                Oil: <i id="1oil_ok" class="fas fa-tint green"></i> <i id="1oil_leak" class="fas fa-tint red"></i>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Machine 2 <span class="badge badge-success">Stable</span>
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                Temperature: <i class="fas fa-thermometer-half green"></i>
                Vibration: <i class="fas fa-signature green"></i>
                Oil: <i class="fas fa-tint green"></i>
            </div>
        </div>
    </div>
</div>

<br>
<h3>Glasgow <small><span class="badge badge-info">Under Construction</span></small></h3>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingThree">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    Machine 1 <span class="badge badge-dark">Offline</span>
                </button>
            </h5>
        </div>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
            <div class="card-body">
                Temperature: <i class="fas fa-thermometer-full red"></i>
                Vibration: <i class="fas fa-signature red"></i>
                Oil: <i class="fas fa-tint red"></i>
            </div>
        </div>
    </div>
</div>

<br>
<h2>Client systems</h2>

<div id="client_ok" class="alert alert-primary" role="alert">
    No alerts on client systems
</div>
<div id="client_warning" class="alert alert-warning" role="alert">
    Check Ace Chemicals status!
</div>
<div id="client_danger" class="alert alert-danger" role="alert">
    Danger at Ace Chemicals!
</div>

<div class="accordion" id="accordionClient">
    <div class="card">
        <div class="card-header" id="headingFour">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                    Ace Chemicals <span class="badge badge-dark">Offline</span>
                </button>
            </h5>
        </div>
        <div id="collapseFour" class="collapse show" aria-labelledby="headingFour" aria-expanded="true" data-parent="#accordionExample">
            <div class="card-body">
                Temperature: <i id="2temp_ok" class="fas fa-thermometer-half green"></i> <i id="2temp_hot" class="fas fa-thermometer-full red"></i>
                Vibration: <i id="2vibr_ok" class="fas fa-signature green"></i> <i id="2vibr_high" class="fas fa-signature red"></i>
                Oil: <i id="2oil_ok" class="fas fa-tint green"></i> <i id="2oil_leak" class="fas fa-tint red"></i>
            </div>
        </div>
    </div>
</div>

<!-- WS -->
<script>
    const ws = new WebSocket('wss://' + 'smartsense.eu-gb.mybluemix.net' + '/ws/alerts');
    ws.addEventListener('open', function () {
        console.log(`Heyy, we're connected`);
    });
    ws.addEventListener('message', function (e) {
        var data = JSON.parse(e.data);
        console.log(data);
        if (data.temp == "high") {
            $("#1temp_ok").addClass("hidden");
            $("#1temp_hot").removeClass("hidden");
        } else {
            $("#1temp_ok").removeClass("hidden");
            $("#1temp_hot").addClass("hidden");
        }
        if (data.leak == "wet") {
            $("#1oil_ok").addClass("hidden");
            $("#1oil_leak").removeClass("hidden");
        } else {
            $("#1oil_ok").removeClass("hidden");
            $("#1oil_leak").addClass("hidden");
        }
        if (data.vibration == "high") {
            $("#1vibr_ok").addClass("hidden");
            $("#1vibr_high").removeClass("hidden");
        } else {
            $("#1vibr_ok").removeClass("hidden");
            $("#1vibr_high").addClass("hidden");
        }
    })
    ws.addEventListener('error', function (err) {
        console.log('Hey, something went wrong', err);
    });
</script>

<script>
    const wsmovement = new WebSocket('wss://' + 'smartsensemovement.eu-gb.mybluemix.net' + '/ws/alerts');
    wsmovement.addEventListener('open', function () {
        console.log(`Heyy, we're connected`);
    });
    wsmovement.addEventListener('message', function (e) {
        var data = JSON.parse(e.data);
        console.log(data);
        if (data.temp == "high" || data.leak == "wet") {
            $("#client_ok").addClass("hidden");
            $("#client_warning").addClass("hidden");
            $("#client_danger").removeClass("hidden");
            $("#accordionClient").removeClass("hidden");
        } else if (data.vibration == "high") {
            $("#client_ok").addClass("hidden");
            $("#client_warning").removeClass("hidden");
            $("#client_danger").addClass("hidden");
            $("#accordionClient").removeClass("hidden");
        } else {
            $("#client_ok").removeClass("hidden");
            $("#client_warning").addClass("hidden");
            $("#client_danger").addClass("hidden");
            $("#accordionClient").addClass("hidden");
        }
       
        if (data.temp == "high") {
            $("#2temp_ok").addClass("hidden");
            $("#2temp_hot").removeClass("hidden");
        } else {
            $("#2temp_ok").removeClass("hidden");
            $("#2temp_hot").addClass("hidden");
        }
        if (data.leak == "wet") {
            $("#2oil_ok").addClass("hidden");
            $("#2oil_leak").removeClass("hidden");
        } else {
            $("#2oil_ok").removeClass("hidden");
            $("#2oil_leak").addClass("hidden");
        }
        if (data.vibration == "high") {
            $("#2vibr_ok").addClass("hidden");
            $("#2vibr_high").removeClass("hidden");
        } else {
            $("#2vibr_ok").removeClass("hidden");
            $("#2vibr_high").addClass("hidden");
        }
    })
    wsmovement.addEventListener('error', function (err) {
        console.log('Hey, something went wrong', err);
    });
</script>

