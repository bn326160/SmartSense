            $("#2temp").addClass("red");
            $("#2temp").removeClass("green");
        } else {
            $("#2temp").removeClass("red");
            $("#2temp").addClass("green");
        }
        if (data.leak == "wet") {
            $("#2oil").addClass("red");
            $("#2oil").removeClass("green");
        } else {
            $("#2oil").removeClass("red");
            $("#2oil").addClass("green");
        }
        if (data.vibration == "high") {
            $("#2vibr").addClass("red");
            $("#2vibr").removeClass("green");
        } else {
            $("#2vibr").removeClass("red");
