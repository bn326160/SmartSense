<h2>Client systems</h2>
<div id="clientloading" class="fa-3x">
    <!--<span class="badge badge-primary"><i class="fas fa-sync fa-spin orange"></i></span>-->
    <div class="sk-folding-cube">
        <div class="sk-cube1 sk-cube"></div>
        <div class="sk-cube2 sk-cube"></div>
        <div class="sk-cube4 sk-cube"></div>
        <div class="sk-cube3 sk-cube"></div>
    </div>
</div>
<div id="clientloaded" class="hidden">
    <div id="client_ok" class="alert alert-primary" role="alert">
        No alerts on client systems
    </div>
    <div id="client_warning" class="alert alert-warning" role="alert">
        Check Ace Chemicals maintenence status!
    </div>
    <div id="client_danger" class="alert alert-danger" role="alert">
        Danger at Ace Chemicals!
    </div>

    <div class="accordion" id="accordionClient">
        <div class="card">
            <div class="card-header" id="headingFour">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                        Ace Chemicals <span class="badge badge-dark">Offline</span>
                    </button>
                </h5>
            </div>
            <div id="collapseFour" class="collapse show" aria-labelledby="headingFour" aria-expanded="true" data-parent="#accordionExample">
                <div class="card-body">
                    Temperature: <i id="2temp" class="fas fa-thermometer-half"></i> <!-- <i id="2temp_ok" class="fas fa-thermometer-half green"></i> <i id="2temp_hot" class="fas fa-thermometer-full red"></i> -->
                    Vibration: <i id="2vibr" class="fas fa-signature"></i> <!-- <i id="2vibr_ok" class="fas fa-signature green"></i> <i id="2vibr_high" class="fas fa-signature red"></i> -->
                    Oil: <i id="2oil" class="fas fa-tint"></i> <!-- <i id="2oil_ok" class="fas fa-tint green"></i> <i id="2oil_leak" class="fas fa-tint red"></i> -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- WS -->
<script>
    const ws = new WebSocket('wss://' + 'smartsense.eu-gb.mybluemix.net' + '/ws/alerts');
    ws.addEventListener('open', function () {
        console.log(`Heyy, we're connected`);
    });
    ws.addEventListener('message', function (e) {
        var data = JSON.parse(e.data);
        console.log(data);

        if (data.temp == "high" || data.leak == "wet") {
            //console.log("danger");
            var x = document.getElementsByClassName("statusbadge");
            var i;
            for (i = 0; i < x.length; i++) {
                x[i].innerHTML = "<span class=\"badge badge-danger\">Danger</span>";
            }
            $('#collapseOne').collapse('show');
            //$("div.statusbadge").replaceWith("<span class=\"badge badge-danger\">Danger</span>");
        } else if (data.vibration == "high") {
            //console.log("warning");
            var x = document.getElementsByClassName("statusbadge");
            var i;
            for (i = 0; i < x.length; i++) {
                x[i].innerHTML = "<span class=\"badge badge-warning\">Warning</span>";
            }
            //$("statusbadge").replaceWith("<span class=\"badge badge-warning\">Warning</span>");
            $('#collapseOne').collapse('show');
        } else {
            //console.log("ok");
            var x = document.getElementsByClassName("statusbadge");
            var i;
            for (i = 0; i < x.length; i++) {
                x[i].innerHTML = "<span class=\"badge badge-success\">Stable</span>";
            }
            //$('#collapseOne').collapse('hide');
            //$("div.statusbadge").replaceWith("<span class=\"badge badge-success\">Stable</span>");
        }

        /*if (data.temp == "high") {
            $("#1temp_ok").addClass("hidden");
